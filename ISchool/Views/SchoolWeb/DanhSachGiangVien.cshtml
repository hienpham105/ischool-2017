@using ISchool.Models
@model IEnumerable<ISchool.Models.GIANGVIEN>

@{
    ViewBag.Title = "Danh Sách Giảng Viên";
    Layout = "~/Views/_Layout/_alelaLayout.cshtml";
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
}

<div>
    <div>
        <table class="table table-striped table-bordered table-style" style="border:1px solid #ddd;">
            <thead>
                <tr style="background:#eee;">
                    <th style="text-align:center; width:80px;">STT</th>
                    <th style="text-align:center;">Họ và Tên</th>
                    <th style="text-align:center;">Địa Chỉ</th>
                    <th style="text-align:center;">Ngày Sinh</th>
                    <th style="width: 80px;" class="text-center">
                        Quê Quán
                    </th>
                    <th style="text-align:center;">Email</th>
                    <th style="text-align:center;">Chức Vụ</th>
                    <th style="text-align:center;">Học Vị</th>
                    @*<th style="width: 80px;" class="text-center">
                            Giới Tính
                        </th>*@
                    <th style="width:100px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center;">@item.MAGV</td>
                        <td style="text-transform: uppercase">
                            <div class="pull-left" style="width:50px;height:50px;display:table">
                                <img style="display:table-cell;width:50px;height:50px;border-radius:50%;border:1px solid #ddd;" src="~/Hinhanh/@item.ANHDAIDIEN" alt=""/>
                            </div>
                            <div class="pull-right" style="width:calc(100% - 77px);height:50px;overflow:hidden;display:table;">
                                <span style="display:table-cell;height:50px;vertical-align:middle;">
                                    <a class="fix-title-2-row" title="Xem họ tên giảng viên">
                                        @item.HOGV @item.TENGV
                                    </a><br />
                                </span>
                            </div>
                        </td>
                        <td style="text-align:center;">@item.DIACHI</td>
                        <td style="text-align:center;">@item.NGAYSINH</td>
                        <td style="text-align:center;">@item.QUEQUAN</td>
                        <td style="text-align:center;">@item.EMAIL</td>
                        <td style="text-align:center;">@item.CHUCVU.TENCV</td>
                        <td style="text-align:center;">@item.HOCVI.TENHV</td>
                        <td style="text-align:center;">
                            <a href="@Url.Action("ChiTietGiangVien","iSchoolWeb", new {id =item.MAGV })">
                                <span class="glyphicon glyphicon-tasks"></span>
                            </a>
                            <a>
                                <span class="fa fa-trash-o"></span>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="9"></td>
                </tr>
            </tfoot>
        </table>

    </div>
</div>



